<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{title}}</title>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link rel="stylesheet" href="../stylesheets/style.css">
  </head>

  <body>
    <aside class="create-login profileHome">
      {{#if loggedIn}}
      <a href="/userProfile/{{currentUser.id}}"><button type="button" name="button">My Profile</button></a>
      <form action="/:logout" method="get">
        <a href=""><button type="button" name="button">Logout</button></a>
      </form>
      <span>{{currentUser.username}}</span>
      {{else}}
      <a href="/login"><button type="button" name="button">Create Account</button></a>
      <a href="/login"><button type="button" name="button">Login</button></a>
      {{/if}}
    </aside>

    <a href="/">
    <img class="logo-text" src="/images/fableText.png" alt=""></a>
    <div class="storyInfo">
      <h1>{{theStory.title}}</h1>
      <h5>by {{theStory.username}}</h5>
      <p>{{theStory.story}}</p>
    </div>
    <h5>Add a Comment</h5>
    <form class="" action="/story/{{theStory.title}}/comment" method="post">
      <textarea class="commentArea" name="comment"></textarea>
      <input type="hidden" value="{{storyData.id}}" name="story_id">
      <button type="submit">submit</button>
    </form>
    <div class="storyInfo">
      <h5>Comments</h5>
      {{#each commentData}}
      <div class="">
        <h4>{{comment}}</h4>
        {{/each}}
      </div>
    </div>
    <script type="text/javascript" src="./app.js"></script>
  </body>
</html>
